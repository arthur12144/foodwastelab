  <script>
    // Supply Chain Metrics Data
    const supplyChainMetrics = [
      {
        name: 'On-Time Supplier Delivery',
        description: 'Orders delivered within scheduled window',
        mean: 91.2,
        q1: 97.5,
        q5: 82.3,
        unit: '%',
        target: 95,
        isGoodWhenHigh: true,
        diagnosis: 'Late deliveries compress available selling time',
        prescription: 'Supplier scorecard enforcement; carrier performance review',
      },
      {
        name: 'Forecast Accuracy (1-WMAPE)',
        description: 'Demand forecast accuracy at SKU/store/day',
        mean: 68.4,
        q1: 82.1,
        q5: 51.2,
        unit: '%',
        target: 75,
        isGoodWhenHigh: true,
        diagnosis: 'High forecast error drives safety stock and over-ordering',
        prescription: 'Demand sensing implementation; promotional lift calibration',
      },
      {
        name: 'Supplier Delivered Shelf Life',
        description: 'Days remaining at DC receipt vs. expected',
        mean: 72.5,
        q1: 88.3,
        q5: 54.1,
        unit: '% of spec',
        target: 80,
        isGoodWhenHigh: true,
        diagnosis: 'Receiving product with reduced freshness potential',
        prescription: 'Contract shelf life guarantees; supplier quality audits',
      },
      {
        name: 'DC Dwell Time',
        description: 'Hours from receipt to store dispatch',
        mean: 28.4,
        q1: 12.2,
        q5: 52.8,
        unit: ' hrs',
        target: 24,
        isGoodWhenHigh: false,
        diagnosis: 'Excessive DC time consuming freshness budget',
        prescription: 'Cross-dock expansion; flow-through scheduling',
      },
      {
        name: 'Order Fill Rate',
        description: 'Store orders fulfilled completely',
        mean: 94.1,
        q1: 98.2,
        q5: 87.6,
        unit: '%',
        target: 97,
        isGoodWhenHigh: true,
        diagnosis: 'Unfilled orders create out-of-stocks at store',
        prescription: 'Safety stock recalibration; allocation logic review',
      },
      {
        name: 'Delivery Frequency Adequacy',
        description: 'Deliveries per week vs. shelf life requirement',
        mean: 78.3,
        q1: 95.0,
        q5: 58.4,
        unit: '% adequate',
        target: 85,
        isGoodWhenHigh: true,
        diagnosis: 'Insufficient delivery frequency for product shelf life',
        prescription: 'Route optimization; frequency increase for short-life SKUs',
      },
    ];

    // Category Data
    const categoryData = [
      { name: 'Berries', instock: 91.2, shrink: 12.4, freshDays: 38, instockQ1: 95.1, instockQ5: 86.3, shrinkQ1: 7.2, shrinkQ5: 18.1, freshQ1: 52, freshQ5: 24 },
      { name: 'Packaged Salads', instock: 89.4, shrink: 14.2, freshDays: 41, instockQ1: 94.2, instockQ5: 83.1, shrinkQ1: 8.5, shrinkQ5: 21.3, freshQ1: 55, freshQ5: 28 },
      { name: 'Avocados', instock: 93.1, shrink: 9.8, freshDays: 44, instockQ1: 96.8, instockQ5: 88.2, shrinkQ1: 5.1, shrinkQ5: 15.2, freshQ1: 58, freshQ5: 31 },
      { name: 'Stone Fruit', instock: 90.5, shrink: 11.2, freshDays: 42, instockQ1: 95.5, instockQ5: 84.8, shrinkQ1: 6.3, shrinkQ5: 17.4, freshQ1: 56, freshQ5: 29 },
      { name: 'Grapes', instock: 92.8, shrink: 8.5, freshDays: 48, instockQ1: 96.4, instockQ5: 88.1, shrinkQ1: 4.8, shrinkQ5: 13.2, freshQ1: 62, freshQ5: 35 },
      { name: 'Tomatoes', instock: 94.2, shrink: 7.1, freshDays: 51, instockQ1: 97.1, instockQ5: 90.2, shrinkQ1: 4.2, shrinkQ5: 11.8, freshQ1: 64, freshQ5: 38 },
      { name: 'Citrus', instock: 95.8, shrink: 4.2, freshDays: 68, instockQ1: 98.2, instockQ5: 92.4, shrinkQ1: 2.1, shrinkQ5: 7.8, freshQ1: 78, freshQ5: 55 },
      { name: 'Bananas', instock: 96.4, shrink: 5.8, freshDays: 52, instockQ1: 98.5, instockQ5: 93.1, shrinkQ1: 3.2, shrinkQ5: 9.4, freshQ1: 65, freshQ5: 41 },
      { name: 'Apples', instock: 96.1, shrink: 3.8, freshDays: 72, instockQ1: 98.4, instockQ5: 93.2, shrinkQ1: 1.9, shrinkQ5: 6.5, freshQ1: 82, freshQ5: 61 },
      { name: 'Potatoes & Onions', instock: 97.2, shrink: 2.4, freshDays: 85, instockQ1: 98.9, instockQ5: 94.8, shrinkQ1: 1.2, shrinkQ5: 4.1, freshQ1: 91, freshQ5: 76 },
    ];

    // Render Supply Chain Vitals Table
    function renderVitalsTable() {
      const tbody = document.getElementById('vitalsBody');
      tbody.innerHTML = '';

      supplyChainMetrics.forEach((metric, index) => {
        const isHealthy = metric.isGoodWhenHigh 
          ? metric.mean >= metric.target 
          : metric.mean <= metric.target;

        // Main row
        const mainRow = document.createElement('tr');
        mainRow.className = 'border-b border-slate-50 hover:bg-slate-50 cursor-pointer transition-colors';
        mainRow.dataset.index = index;
        mainRow.innerHTML = `
          <td class="py-3 px-4">
            <div class="font-medium text-slate-700 text-sm">${metric.name}</div>
            <div class="text-xs text-slate-400">${metric.description}</div>
          </td>
          <td class="py-3 px-3 text-center">
            <span class="text-lg font-semibold ${isHealthy ? 'text-slate-800' : 'text-amber-600'}">
              ${metric.mean}${metric.unit}
            </span>
          </td>
          <td class="py-3 px-3 text-center text-sm text-slate-500">
            ${metric.target}${metric.unit}
          </td>
          <td class="py-3 px-4">
            <div class="flex items-center gap-1.5 text-xs">
              <span class="w-12 text-right font-medium ${metric.isGoodWhenHigh ? 'text-green-600' : 'text-red-500'}">
                ${metric.q1}${metric.unit}
              </span>
              <div class="flex-1 h-1.5 gradient-bar rounded-full opacity-70 min-w-[60px]"></div>
              <span class="w-12 font-medium ${metric.isGoodWhenHigh ? 'text-red-500' : 'text-green-600'}">
                ${metric.q5}${metric.unit}
              </span>
            </div>
          </td>
          <td class="py-3 px-3 text-center">
            ${isHealthy 
              ? '<span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-700">Healthy</span>'
              : '<span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-amber-100 text-amber-700">Attention</span>'
            }
          </td>
          <td class="py-3 px-3 text-center text-slate-400">
            <span class="chevron" id="chevron-${index}">▶</span>
          </td>
        `;

        // Expandable row
        const expandRow = document.createElement('tr');
        expandRow.className = 'expand-row bg-amber-50 border-b border-amber-100';
        expandRow.id = `expand-${index}`;
        expandRow.innerHTML = `
          <td colspan="6" class="px-4 py-4">
            <div class="grid grid-cols-2 gap-6">
              <div>
                <div class="text-xs text-slate-500 uppercase tracking-wide mb-1">Diagnosis</div>
                <div class="text-sm text-slate-700">${metric.diagnosis}</div>
              </div>
              <div>
                <div class="text-xs text-slate-500 uppercase tracking-wide mb-1">Recommended Action</div>
                <div class="text-sm text-slate-700 font-medium">${metric.prescription}</div>
              </div>
            </div>
          </td>
        `;

        mainRow.addEventListener('click', () => toggleExpand(index));
        
        tbody.appendChild(mainRow);
        tbody.appendChild(expandRow);
      });
    }

    // Toggle expand row
    function toggleExpand(index) {
      const expandRow = document.getElementById(`expand-${index}`);
      const chevron = document.getElementById(`chevron-${index}`);
      const mainRow = expandRow.previousElementSibling;
      
      expandRow.classList.toggle('active');
      chevron.classList.toggle('active');
      mainRow.classList.toggle('bg-amber-50');
    }

    // Render Category Table
    function renderCategoryTable() {
      const tbody = document.getElementById('categoryBody');
      tbody.innerHTML = '';

      categoryData.forEach(cat => {
        const row = document.createElement('tr');
        row.className = 'border-b border-slate-50 hover:bg-slate-50';
        
        row.innerHTML = `
          <td class="py-3 px-4">
            <div class="font-medium text-slate-700">${cat.name}</div>
          </td>
          
          <!-- In-Stock -->
          <td class="py-3 px-2 text-center border-l border-slate-100">
            <span class="font-semibold ${cat.instock < 92 ? 'text-amber-600' : 'text-slate-800'}">
              ${cat.instock}%
            </span>
          </td>
          <td class="py-3 px-2">
            <div class="flex items-center gap-1 text-xs text-slate-500">
              <span class="text-green-600">${cat.instockQ1}</span>
              <div class="w-8 h-1 gradient-bar rounded-full opacity-60"></div>
              <span class="text-red-500">${cat.instockQ5}</span>
            </div>
          </td>
          
          <!-- Shrink -->
          <td class="py-3 px-2 text-center border-l border-slate-100">
            <span class="font-semibold ${cat.shrink > 10 ? 'text-red-600' : cat.shrink > 6 ? 'text-amber-600' : 'text-slate-800'}">
              ${cat.shrink}%
            </span>
          </td>
          <td class="py-3 px-2">
            <div class="flex items-center gap-1 text-xs text-slate-500">
              <span class="text-green-600">${cat.shrinkQ1}</span>
              <div class="w-8 h-1 gradient-bar rounded-full opacity-60"></div>
              <span class="text-red-500">${cat.shrinkQ5}</span>
            </div>
          </td>
          
          <!-- Freshness -->
          <td class="py-3 px-2 text-center border-l border-slate-100">
            <span class="font-semibold ${cat.freshDays < 45 ? 'text-amber-600' : 'text-slate-800'}">
              ${cat.freshDays}%
            </span>
          </td>
          <td class="py-3 px-2">
            <div class="flex items-center gap-1 text-xs text-slate-500">
              <span class="text-green-600">${cat.freshQ1}</span>
              <div class="w-8 h-1 gradient-bar rounded-full opacity-60"></div>
              <span class="text-red-500">${cat.freshQ5}</span>
            </div>
          </td>
        `;
        
        tbody.appendChild(row);
      });
    }

    // Initialize
    document.addEventListener('DOMContentLoaded', () => {
      renderVitalsTable();
      renderCategoryTable();
    });
  </script>

</body>
